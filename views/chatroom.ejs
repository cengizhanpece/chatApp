<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="css/message.css">
    <link rel="stylesheet" type="text/css" href="css/hamburger-menu.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <title>Chat App</title>
</head>
<script> var urself = '<%= kullaniciId %>' </script>
<body>
    <!-- Hamburger Menu Starts -->
    <div id="hamburger-menu-icon">
        <span id="hamburger-1"></span>
        <span id="hamburger-2"></span>
        <span id="hamburger-3"></span>
    </div>
    <div id="hamburger">
        <div id="hamburgerWelcome">
            ChatApp'e Ho≈ügeldin <%= kullaniciId %> 
        </div>
        <hr>
        <div id="onlineUsers">
            <i class="fas fa-user" id="getOnlineUsers">Online Users</i>
            <div id="users">
                <div class="user">User 1</div>
                <div class="user">User 2</div>
                <div class="user">User 3</div>
                <div class="user">User 4</div>
            </div>
        </div>
        <div id="profile">
            <i class="fas fa-user-circle">Profile</i>
        </div>
        <div id="logout">
            <i class="fas fa-sign-out-alt"> Logout</i>
        </div>
    </div>


    <!-- Hamburger Menu Ends -->
    <div id="container">
        <!-- Message View Starts -->
        <div id="allMessages">
            
        </div>
        <!-- Message View Ends -->
    </div>


    <div id="sendMessage">
        <input type="text" id="sendMessageTxt" name="sendMessage" autocomplete="off">
        <i id="sendMessageBtn" class="fas fa-paper-plane"></i>
    </div>
    


    <script src="scripts/socket.io.js" type="text/javascript"></script>
    <script src="scripts/message.js" type="text/javascript"></script>
    <script src="scripts/hamburger-menu.js" type="text/javascript"></script>
</body>

